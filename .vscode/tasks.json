{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "lint",
      "path": ".github/actions",
      "problemMatcher": [
        "$eslint-stylish",
        "$tsc"
      ],
      "label": "npm: lint - .github/actions",
      "detail": "npm-run-all --continue-on-error lint:*",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
