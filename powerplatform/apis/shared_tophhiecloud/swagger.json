          {
            "name": "connectionId",
            "in": "path",
            "required": true,
            "type": "string",
            "x-ms-visibility": "internal"
          },
          {
            "name": "tenantID",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "The Entra ID Tenant ID",
            "x-ms-summary": "Tenant ID"
          },
          {
            "name": "domainName",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "A domain available within the tenant",
