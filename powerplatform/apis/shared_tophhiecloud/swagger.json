      "get": {
        "responses": {
          "200": {
            "description": "default",
            "schema": {
              "type": "object",
              "properties": {
                "tenantId": {
                  "type": "string",
                  "description": "ID of Entra Tenant",
                  "title": "Tenant ID"
                },
                "federationBrandName": {
                  "type": "string",
                  "description": "The ADFS/Federation Brand Name",
                  "title": "Federation Brand Name"
                },
                "tenantDisplayName": {
                  "type": "string",
                  "description": "Tenant's Display Name",
                  "title": "Tenant Display Name"
                },
                "defaultDomainName": {
                  "type": "string",
                  "description": "Default Tenant Domain Name",
                  "title": "Default Domain Name"
                },
                "bannerLogo": {
                  "type": "string",
                  "description": "Entra ID Tenant Branding Logo",
                  "title": "Banner Logo"
                },
                "tenantRegion": {
                  "type": "string",
                  "description": "Indicates which region the tenant is hosted in",
                  "title": "Tenant Region"
                },
                "desktopSsoEnabled": {
                  "type": "boolean",
                  "description": "Indicates whether the tenant has Desktop SSO enabled",
                  "title": "Desktop SSO Enabled"
                },
                "verifiedEmailSignUpDisallowed": {
                  "type": "boolean",
                  "description": "Indicates whether users with an email address on one of the tenant's domains is allowed to join the tenant, if they're not already",
                  "title": "Verified Email Sign Up Disallowed"
                },
                "tenantIsUnmanaged": {
                  "type": "boolean",
                  "description": "Indicates whether tenant is unmanaged",
                  "title": "Tenant Is Unmanaged"
                },
                "verifiedDomains": {
                  "type": "integer",
                  "format": "int32",
                  "description": "Number of verified domains in the tenant",
                  "title": "Verified Domains"
                },
                "additionalDomains": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "Array of additional domains",
                    "title": "Additional Domains"
                  },
                  "description": "additionalDomains"
                }
              }
            }
          }
        },
        "summary": "Fetch Entra ID Tenant Information",
        "description": "Fetches publicly available Entra ID Tenant Information (domainName takes priority over tenantID).",
