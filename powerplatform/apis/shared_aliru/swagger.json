            "schema": {
              "required": [
                "Text"
              ],
              "type": "object",
              "properties": {
                "Text": {
                  "title": "Text",
                  "description": "The text of your notification.",
                  "type": "string",
                  "x-ms-visibility": "important"
                },
                "UserId": {
                  "title": "User",
                  "description": "The User, who shall be notified. If empty the whole organization will be notified.",
                  "type": "string",
                  "x-ms-dynamic-values": {
                    "operationId": "GetUsers",
