      "get": {
        "summary": "Load Users in your organization",
        "description": "This function is mainly used for loading users within your organization.",
        "operationId": "GetUsers",
        "parameters": [
          {
            "name": "connectionId",
            "in": "path",
            "required": true,
            "type": "string",
